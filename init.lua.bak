vim.api.nvim_set_keymap("", "K", "T", {desc = "Till (backward)", noremap = true})
-- Remappings that work in normal mode
---- window navigation
vim.api.nvim_set_keymap("n", "<C-h>", "<C-w>h", {desc = "Move to buffer on left", noremap = true})
vim.api.nvim_set_keymap("n", "<C-t>", "<C-w>k", {desc = "Move to buffer above", noremap = true})
vim.api.nvim_set_keymap("n", "<C-n>", "<C-w>j", {desc = "Move to buffer below", noremap = true})
vim.api.nvim_set_keymap("n", "<C-s>", "<C-w>l", {desc = "Move to buffer on right", noremap = true})
---- TODO: map actions of <C-t> etc to other keys.
---- move lines
vim.api.nvim_set_keymap("n", "<A-t>", ":m .-2<CR>==", {desc = "Move current line up", noremap = true})
vim.api.nvim_set_keymap("n", "<A-n>", ":m .+1<CR>==", {desc = "Move current line down", noremap = true})
vim.api.nvim_set_keymap("v", "<A-t>", ":m '<-2<CR>gv=gv", {desc = "Move current line(s) up", noremap = true})
vim.api.nvim_set_keymap("v", "<A-n>", ":m '>+1<CR>gv=gv", {desc = "Move current line(s) down", noremap = true})

vim.api.nvim_set_option("equalalways", true) -- make windows same width when closing one

